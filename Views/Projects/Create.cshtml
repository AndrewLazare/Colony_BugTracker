@model COLONY_THE_BUGTRACKER.Models.Project

@{
    ViewBag.Title = "Create New Project";
}

<div class="card" style="background-color: #0074E1; color: white">
    <div class="card-body">
        <div class="row">
            <div class="col-md-2"></div>
            <div class="col-xl-8">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">


                        @Html.ValidationSummary(true, "", new { @class = "text-light" })
                        <div class="form-group">
                            <div class="col-md-10">
                                <h2 class="number" style="color: white"><strong>Name</strong></h2>

                                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-light" })
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-10">
                                <h2 class="number" style="color: white"><strong>Description</strong></h2>

                                @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "mceEditor" } })
                                @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-light" })
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Create" class="btn btn-default" style="background-color: #70AE6E" />
                            </div>
                        </div>
                        <div>
                            <h2 class="number" style="font-weight: bold; color:white"> @Html.ActionLink("Back to List", "Index")</h2>
                        </div>
                    </div>


                }


            </div>
            <div class="colmd-2"></div>
        </div>
    </div>
</div>

<script src="~/Scripts/tinymce/tinymce.min.js"></script>
<script src="~/Scripts/tinymce/jquery.tinymce.min.js"></script>
<script type="text/javascript">
    $(function () {
        tinymce.init({
            selector: '#editor'
        });
    });
</script>
